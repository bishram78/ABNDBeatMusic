<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.santosh.music.player">

    <application
        android:allowBackup="true"
        android:fullBackupContent="false"
        android:icon="@drawable/music_launcher_icon_96"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.HomePageActivity"
            android:theme="@style/NoActionBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.NowPlayingActivity"
            android:theme="@style/FullScreenTheme"/>
        <activity
            android:name=".activities.ArtistDetailsActivity"
            android:theme="@style/FullScreenTheme" />
        <activity
            android:name=".activities.AlbumDetailsActivity"
            android:theme="@style/FullScreenTheme"/>
    </application>

</manifest>